<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:orientation="horizontal">

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Logout" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/CarService"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/navigation" />

    <ImageView
        android:id="@+id/orderHistory"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CarService"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="52dp"
        android:src="@drawable/ic_baseline_shopping_cart_24" />



    <ImageView
        android:id="@+id/Profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/CarService"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="52dp"
        android:src="@drawable/account" />


    <TextView
        android:id="@+id/menubarid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/menubar" />

    <TextView
        android:id="@+id/UserLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CarService"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_marginTop="42dp"
        android:drawableLeft="@drawable/account"
        android:text="Name" />

    <TextView
        android:id="@+id/CarshotId"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:layout_below="@id/menubarid"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/baloo"
        android:text="Car Shot"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CarshotId"
        android:layout_centerInParent="true"
        android:fontFamily="@font/baloo"
        android:text="Our Service Is Second To None"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/CarWash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/slogan"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/carwashh" />



    <ImageButton
        android:id="@+id/CarService"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/CarWash"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/carservicess" />




</RelativeLayout>